<UserControl x:Class="EnduranceJudge.Gateways.Desktop.Components.Content.Event.Event"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <StackPanel>
        <TextBox Style="{StaticResource Input-Inline}"
                 Text="{Binding Name}" />

        <TextBox Style="{StaticResource Input-Inline}"
                 Text="{Binding PopulatedPlace}" />

        <Button Style="{StaticResource Button-Primary}"
                Command="{Binding Save}">Save</Button>

        <ComboBox ItemsSource="{Binding Countries}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="IsoCode"
                  SelectedValue="{Binding SelectedCountryIsoCode}"/>

        <TextBox Style="{StaticResource Input-Inline}"
                 Text="{Binding PresidentGroundJuryName}" />

    </StackPanel>
</UserControl>
