<Window x:Class="EnduranceJudge.Gateways.Desktop.Components.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:desktop="clr-namespace:EnduranceJudge.Gateways.Desktop"
        Title="ShellWindow">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
        </Grid.RowDefinitions>

        <ContentControl prism:RegionManager.RegionName="{x:Static desktop:Regions.Navigation}"
                        Grid.Row="0"/>

        <ContentControl prism:RegionManager.RegionName="{x:Static desktop:Regions.SubNavigation}"
                        Grid.Row="1"/>

        <ContentControl prism:RegionManager.RegionName="{x:Static desktop:Regions.Content}"
                        Grid.Row="2"/>
    </Grid>
</Window>
