<UserControl x:Class="EnduranceJudge.Gateways.Desktop.Views.Navigation.NavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mvvm="http://prismlibrary.com/"
             xmlns:local="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Navigation"
             mvvm:ViewModelLocator.AutoWireViewModel="True">

    <StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
            <Button Style="{StaticResource Button-Primary}"
                    Command="{Binding NavigateToImport}"
                    Content="{x:Static local:NavigationContent.ImportPageButtonText}" />

            <Button Style="{StaticResource Button-Primary}"
                    Command="{Binding NavigateToEvent}">Event</Button>

            <Button>::</Button>

            <Button Style="{StaticResource Button-Primary}"
                    Command="{Binding NavigateToUpdateEvent}">UpdateEvent</Button>

            <Button Style="{StaticResource Button-Primary}"
                    Command="{Binding NavigateToPrintExample}">Print example</Button>

            <Button Style="{StaticResource Button-Primary}"
                    Command="{Binding NavigateToEventList}">Events list</Button>
        </StackPanel>
        <DockPanel Style="{StaticResource Strip-Error}"
                   Visibility="{Binding NotificationVisibility}">

            <Button Style="{StaticResource Button-Primary}"
                Command="{Binding CloseNotification}">Close</Button>

            <!--TODO: Extract converter from NotificationSeverity-->
            <TextBlock Style="{StaticResource Text-Error}"
                       Text="{Binding NotificationMessage}"/>
        </DockPanel>
    </StackPanel>
</UserControl>
