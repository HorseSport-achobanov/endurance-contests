<UserControl x:Class="EnduranceJudge.Gateways.Desktop.Views.Content.Event.Competitions.CompetitionDependantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:common="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Event"
             xmlns:local="clr-namespace:EnduranceJudge.Gateways.Desktop.Views.Content.Event.Competitions"
             prism:ViewModelLocator.AutoWireViewModel="True">

    <StackPanel Style="{StaticResource Form}">
        <TextBox Style="{StaticResource Input-Id}"
                 Text="{Binding Id}" />

        <DockPanel Style="{StaticResource Form-Item}">
            <Label Style="{StaticResource Label-Primary}"
                   Target="{Binding ElementName=_Name}"
                   Content="{x:Static common:EventPageContent.SaveButtonText}"/>

            <TextBox Style="{StaticResource Input}"
                     Text="{Binding Name}"
                     Name="_Name" />
        </DockPanel>
        <DockPanel Style="{StaticResource Form-Item}">
            <Label Style="{StaticResource Label-Primary}"
                   Target="{Binding ElementName=_Type}"
                   Content="{x:Static local:CompetitionContent.Type}" />

            <ComboBox Style="{StaticResource Combo-Box}"
                      ItemsSource="{Binding CompetitionTypes}"
                      SelectedValue="{Binding Type}"
                      Name="_Type" />
        </DockPanel>
        <DockPanel Style="{StaticResource Form-Item}">

            <Button Style="{StaticResource Button}"
                    Command="{Binding Submit}"
                    Content="{x:Static common:EventPageContent.SaveButtonText}" />
        </DockPanel>
    </StackPanel>

</UserControl>
