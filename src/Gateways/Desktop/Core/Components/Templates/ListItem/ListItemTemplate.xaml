<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:EnduranceJudge.Gateways.Desktop.Core.Components.Templates.ListItem"
                    xmlns:content="clr-namespace:EnduranceJudge.Gateways.Desktop.Core.Components">

    <DataTemplate DataType="{x:Type local:ListItemViewModel}">
            <DockPanel Style="{StaticResource List-Item}">
                <Button Style="{StaticResource Button-Primary}"
                        Content="{x:Static content:ComponentContent.UpdateButtonText}"
                        Command="{Binding Command}"
                        CommandParameter="{Binding Id}"/>

                <TextBlock Style="{StaticResource Text-Paragraph}"
                           Text="{Binding Name}" />
            </DockPanel>
    </DataTemplate>

</ResourceDictionary>
